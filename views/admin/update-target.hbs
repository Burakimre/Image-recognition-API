<div class="container">
	<div class="page-header text-center">
		<a href="/targets" class="float-left btn"><span class="fa fa-angle-left"></span> Back</a>
		<h1><span class="fas fa-bullseye"></span> Targets</h1>
	</div>
	<form method="POST" enctype="multipart/form-data" action="/api/targets/{{target.id}}">
		<div class="form-group">
			<label for="targetName">Target name</label>
			<input type="text" class="form-control" id="targetName" name="targetName" placeholder="Enter target name"
				   value="{{target.name}}">
		</div>
		<div class="form-group">
			<label for="exampleInputPassword1">Description</label>
			<textarea class="form-control" id="targetDescription" name="targetDescription" rows="3"
					  placeholder="Enter target description">{{target.description}}</textarea>
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>
